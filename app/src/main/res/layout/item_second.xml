<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="3dp"
    android:elevation="6dp"
    app:cardCornerRadius="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sencond_text_title"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_alignTop="@+id/second_image"
            android:textSize="18sp"
            android:text="这是标题"/>
        <TextView
            android:id="@+id/text_content"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/sencond_text_title"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="12sp"
            android:text="这是内容"/>

        <TextView
            android:id="@+id/second_text_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sencond_text_title"
            android:layout_marginTop="32dp"
            android:layout_alignLeft="@+id/sencond_text_title"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_bg"
            android:ellipsize="end"
            android:text="这是来源"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/second_text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sencond_text_title"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/second_text_source"
            android:background="@drawable/text_bg"
            android:ellipsize="end"
            android:text="这是时间"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/second_image"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/fengye"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>